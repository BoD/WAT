{
  "manifest_version": 3,
  "name": "BoD's Window Manager",
  "version": "1.0.0",
  "description": "BoD's Window Manager",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": [
    "tabs",
    "system.display"
  ],
  "background": {
    "service_worker": "serviceworker.js",
    "scripts": [
      "serviceworker.js"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; script-src-elem 'self' 'unsafe-inline'"
  },
  "action": {
    "default_title": "BoD's Window Manager"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "wat@jraf.org"
    }
  }
}
